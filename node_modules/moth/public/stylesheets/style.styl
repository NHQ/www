body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	color #333
	height 100%

@css {
	a {
		padding: 3px 7px;
		border-radius: 10px;
		border: 3px solid gray;
		background: #aaa;
		color: blue;
		text-decoration:none
	}
}

form
	zoom 2
	padding 1em
	text-align left

form input[type=submit]
	zoom .80
	float right
	margin: 1em 0

#loginFormBasic
	width 290px
	margin 0 auto

legend
	text-align right
	font-size 18px
	text-decoration none